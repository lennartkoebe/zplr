{
  "name": "zplr",
  "version": "0.1.3",
  "description": "TypeScript library for parsing and rendering ZPL label files",
  "main": "./dist/index.node.js",
  "module": "./dist/index.node.js",
  "types": "./dist/index.node.d.ts",
  "type": "module",
  "exports": {
    "./node": {
      "import": "./dist/index.node.js",
      "types": "./dist/index.node.d.ts"
    },
    "./web": {
      "import": "./dist/index.web.js",
      "types": "./dist/index.web.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "pnpm run dev:web",
    "dev:web": "vite",
    "dev:node": "tsx src/examples.ts --env NODE",
    "debug": "tsx --inspect-brk --watch src/main",
    "test": "vitest",
    "build": "tsdown",
    "build:web": "vue-tsc --noEmit -p tsconfig.web.json && vite build",
    "preview:web": "vite preview",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json"
  },
  "keywords": [
    "zpl",
    "label",
    "barcode",
    "parser",
    "renderer",
    "canvas"
  ],
  "author": "Lennart Kurth",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.18.10",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "esbuild-plugin-path-alias": "^1.0.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsdown": "^0.15.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.1"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "jsbarcode": "^3.12.1",
    "qrcode": "^1.5.4"
  },
  "optionalDependencies": {
    "skia-canvas": "^3.0.8"
  }
}
